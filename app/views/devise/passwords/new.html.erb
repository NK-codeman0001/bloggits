<div class="main mx-auto flex flex-col items-center justify-center py-5">
    <div class="head text-2xl font-extrabold">
      <h2>Forgot your password?</h2>
    </div>
 <div class="form mt-5 border-2 border-gray-900 p-8">
   <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="form-mid bg-white px-5 py-3 border-2">              
       <div class="field">
         <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
    </div>

    <div class="form-bottom mt-2 mx-auto text-center">
      <div class="actions">
           <%= f.submit "Send me reset password instructions", class: "rounded-lg border-2 bg-slate-500 px-3 py-1 text-white hover:bg-slate-400 hover:text-black my-2" %>
      </div>

       <div class="render-shared-link mt-3 flex flex-col items-center -space-y-2">
          <%= render "devise/shared/links" %>
        </div>
    </div>
   <% end %>
  </div>
</div>
