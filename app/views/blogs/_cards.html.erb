<h1>My Blogs  <%= link_to "(+)", new_blog_path, {:style=> 'text-decoration: none;'} if current_user.is_admin?%></h1> 

<%if current_user.is_admin? && controller_name == 'blogs' && action_name == 'index' || action_name == 'search' %>
 <input type="checkbox" id="select-all-blogs">
 <label>Select All</label>
<br>
<button type="button", id="archive-blogs">Archive Blogs</button>

  <h2><%= "#{blog_type}" %></h2>
    <ul class='admin'> 
    <% blogs.each do |blog| %>
    <% if blog.archived == blog_hide%>
      <div id="blog_div_<%= blog.id%>">
        <h3><li>
        <input type="checkbox" class="blog-select-check" id="blog_<%= blog.id%>" data-blog-id= <%= blog.id%>>
        
        <%=link_to blog.title, blog_path(blog) %></h3>
        <p><%#=blog.content%></p>
      
      </div>
    <%end%>
    <%end%>
    </ul>
<%else%>
<h2><%= "#{blog_type}" %></h2>
    <ul>
    <% blogs.each do |blog| %>
    <% if blog.archived == blog_hide%>
      <div>
        <h3><li>
        <%=link_to blog.title, blog_path(blog) %></h3>
        <p><%#=blog.content%></p>
      </div>
    <%end%>
    <%end%>
    </ul>
<%end%>

<hr>
<%== pagy_nav(@pagy) if @pagy.pages > 1 %>