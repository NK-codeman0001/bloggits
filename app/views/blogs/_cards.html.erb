<h1>My Blogs  <%= link_to "(+)", new_blog_path, {:style=> 'text-decoration: none;'} if current_user.is_admin?%></h1> 
<h2><%= "#{blog_type}" %></h2>
    <% if current_user.is_admin?%> 
      <ul class='admin'> 
    <%else %>
      <ul>
      <%end%>
    <% blogs.each do |blog| %>
    <% if blog.archived == blog_hide%>
      <div>
        <h3><li>
        <% if current_user.is_admin?%>
          <input type="checkbox" id="blog_<%= blog.id%>" data-blog-id= <%= blog.id%>>
        <%end%>
        <%=link_to blog.title, blog_path(blog) %></h3>
        <p><%#=blog.content%></p>
      </div>
    <%end%>
    <%end%>
    </ul>
    <hr>
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>